{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": false,
    "experimentalDecorators": true,
    "outDir": "./bin",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./lib/", "./node_modules/@types/"],
    "types":[
      "d3",
      "d3-scale",
      "d3-time",
      "fastclick",
      "moment",
      "pikaday",
      "globalize",
      "underscore",
      "coveoanalytics",
      "es6-promise",
      "jstimezonedetect",
      "l10n",
      "latinize",
      "magic-box",
      "modal-box"
    ]
  },
  "lib": [
    "DOM",
    "ES5",
    "ScriptHost",
    "ES2015.Promise"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
